<main id="main" class="main">

    <section>
        <div class="container my-5">
            <h4 class="mb-4">Manage All Reports</h4>

            <div class="row g-0">
                <div class="col-lg-6">
                    <div class="table-responsive" style="overflow: visible;">
                        <table class="table table-bordered" id="table">
                            <thead class="table-dark">
                                <tr class="align-middle">
                                    <th scope="col">User Name</th>
                                    <th scope="col">Chat</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each chats}}
                                <tr class="align-middle">
                                    <td>{{this.sender}}</td>
                                    <td><a href="/admin/single-chat/{{this.userId}}" class="btn btn-dark btn-sm">View
                                            {{this.sender}}</a></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </section>

</main>